doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Search Catalog
    link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css' rel='stylesheet')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js')
    script(src='//code.jquery.com/jquery-1.11.1.min.js')
    style.
      .span4 img {
        margin-right: 10px;
      }

      .span4 .img-left {
        float: left;
      }

      .span4 .img-right {
        float: right;
      }
  body
    .container
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='/cat') Hyper/Cat Server
          #navbar.collapse.navbar-collapse
            ul.nav.navbar-nav
              li.active
                a(href='index.html') Home
              li
                a(href='search.html') Search Catalog
              li
                a(href='getstarted.html') README
          // /.nav-collapse

      .jumbotron
        h3 Search Results:
          //p(style = 'white-space: pre-wrap; font-family: monospace')!{message}
          .block
            .row
              .span4
                img.img-left(src= !{image})
                .content-heading
                  h3 !{name} from !{dept} @Specialization - !{spl}
                p
                  | Batting - !{batting}
                p
                  | Bowling - !{bowling}
                p
                  | Wicket keeping - !{keeping}
                p
                  | Fielding - !{fielding}
